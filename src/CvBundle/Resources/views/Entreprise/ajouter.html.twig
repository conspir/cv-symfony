{% extends('::layout.html.twig') %}

{% block contenu %}

    <div class="container content-xs">
        <div class="headline-center">
            <div class="row">
                <div class="col-sm-6 col-sm-offset-3">
                    <h2>Formulaire entreprise</h2>

                    {{ form_start(form,{'attr':{'class':'form-horizontal'}}) }}

                    <div class="form-group">

                        {{ form_label(form.raisonsocial,"Raison sociale",{'label_attr':{'class':'col-sm-3 control-label'}}) }}

                        <div class="col-sm-9">

                            {{ form_widget(form.raisonsocial,{'attr':{'class':'form-control'}}) }}

                        </div>

                    </div>

                    <div class="form-group">

                        {{ form_label(form.adresse,"Adresse",{'label_attr':{'class':'col-sm-3 control-label'}}) }}

                        <div class="col-sm-9">

                            {{ form_widget(form.adresse,{'attr':{'class':'form-control'}}) }}

                        </div>

                    </div>

                    <div class="form-group">

                        {{ form_label(form.codepostal,"Code postale",{'label_attr':{'class':'col-sm-3 control-label'}}) }}

                        <div class="col-sm-9">

                            {{ form_widget(form.codepostal,{'attr':{'class':'form-control'}}) }}

                        </div>

                    </div>

                    <div class="form-group">

                        {{ form_label(form.ville,"Ville",{'label_attr':{'class':'col-sm-3 control-label'}}) }}

                        <div class="col-sm-9">

                            {{ form_widget(form.ville,{'attr':{'class':'form-control'}}) }}

                        </div>

                    </div>

                    <div class="form-group">

                        {{ form_label(form.telephone,"Téléphone",{'label_attr':{'class':'col-sm-3 control-label'}}) }}

                        <div class="col-sm-9">

                            {{ form_widget(form.telephone,{'attr':{'class':'form-control'}}) }}

                        </div>

                    </div>

                    <div class="form-group">

                        {{ form_label(form.web,"Site web",{'label_attr':{'class':'col-sm-3 control-label'}}) }}

                        <div class="col-sm-9">

                            {{ form_widget(form.web,{'attr':{'class':'form-control'}}) }}

                        </div>

                    </div>

                    <div class="form-group">

                        {{ form_label(form.image,"Image",{'label_attr':{'class':'col-sm-3 control-label'}}) }}

                        <div class="col-sm-9">

                            {{ form_widget(form.image,{'attr':{'class':'form-control'}}) }}

                        </div>

                    </div>

                    <div class="form-group">

                        {{ form_widget(form.ajouter,{'attr':{'class':'btn-u'}}) }}

                    </div>

                    {{ form_rest(form) }}

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}